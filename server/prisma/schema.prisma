generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id Int @id @default(autoincrement())
  email String @unique
  pwhash String
  posts Post[]
}

model Post {
  id Int @id @default(autoincrement())
  title String @default("")
  content String @default("")
  author User @relation(fields: [authorId], references: [id])
  authorId Int
}
